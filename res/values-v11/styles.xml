<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>
    
    <style name="CustomActionBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" 
        parent="@style/Theme.AppCompat.Light">
        <item name="android:background">@drawable/abc_cab_background_bottom_holo_light</item>
        <item name="android:titleTextStyle">@style/MyTitleStyle</item>
        
        <item name="background">@drawable/abc_cab_background_bottom_holo_light</item>
        <item name="titleTextStyle">@style/MyTitleStyle</item>
    </style>
    <style name="MyTitleStyle"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
    </style>
</resources>
